---
import { Block, Button, Seperator } from "basecamp/components";
import { ArrowRight } from "lucide-react";
import { Image } from "astro:assets";
import hero from "../images/hero.png";
---
<Block.Wrapper id="hero">
    <Block.Seperator slot="seperator">
        <Seperator loading="eager" />
    </Block.Seperator>
    <Block.Body slot="body" size="xl">
        <div
            class="grid lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12 justify-center lg:justify-start"
        >
            <div
                class="lg:mr-auto place-self-center lg:col-span-7 text-center lg:text-left"
            >
                <h1
                    class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl text-primary"
                >
                    Home of Scouting in Chertsey
                </h1>
                <p
                    class="max-w-2xl mb-6 font-light lg:mb-8 md:text-lg lg:text-xl"
                >
                    Established in 1909, 1st Chertsey Scout Group continues
                    to thrive, providing fun, adventure, and development
                    opportunities.
                </p>
                <p
                    class="max-w-2xl mb-6 font-light lg:mb-8 md:text-lg lg:text-xl"
                >
                    At present, over 100 young people take part in
                    activities each week, with a diverse programme provided
                    by an experienced team of volunteer leaders and parent
                    helpers.
                </p>

                <a href="/#contact" class="hidden lg:block">
                    <Button Icon={ArrowRight} type="button" text="Get in touch" />
                </a>
            </div>
            <div class="lg:mt-0 lg:col-span-5">
                <Image
                    loading={"eager"}
                    src={hero}
                    alt="1st Chertsey Scout HQ"
                    quality={100}
                    height={1500}
                    width={1500}
                    class="w-full rounded-lg"
                />
            </div>
            <a href="/#contact" class="mt-6 lg:hidden block">
                <Button Icon={ArrowRight} type="button" text="Get in touch" />
            </a>
        </div>
    </Block.Body>
</Block.Wrapper>
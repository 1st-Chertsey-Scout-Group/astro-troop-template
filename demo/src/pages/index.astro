---
import { ColourBlock } from "basecamp/components";
import {
	Hero,
	SectionsList,
	JoinUsCta,
	Address,
	ContactForm,
} from "basecamp/blocks";

import hero from "../images/hero.png";
import PageLayout from "../layouts/page.layout.astro";
import { getCollection } from "astro:content";

const sections = (await getCollection("sections"))
	.sort((a, b) => {
		return a.data.order - b.data.order;
	})
	.map((s) => s.data);
---

<PageLayout
	title="Home"
	seo={{
		title: "1st Chertsey Scout Group",
		description:
			"Join the 1st Chertsey Scout Group - a historic hub of Scouting in Chertsey since 1909. We offer fun, adventure, and personal growth for ages 4 to 18, with sections for Squirrels, Beavers, Cubs, and Scouts. Get involved as a volunteer or sign up your child to learn skills for life in a supportive community. Located at Scout HQ, Staines Lane, Chertsey.",
	}}
>
	<Hero
		href="/#contact"
		button="Get in touch"
		image={hero}
		imageAlt="1st Chertsey Scout HQ"
		lineOne="Established in 1909, 1st Chertsey Scout Group continues to thrive, providing fun, adventure, and development opportunities."
		lineTwo="At present, over 100 young people take part in activities each week, with a diverse programme provided by an experienced team of volunteer leaders and parent helpers."
		title="Home of Scouting in Chertsey"
	/>

	<ColourBlock colour="alternative">
		<SectionsList
			subtitle="Offering fun and challenging activities, unique experiences, everyday adventure and the chance to help others so that we make a positive impact in communities."
			title="Our Sections"
			sections={sections}
		/>
	</ColourBlock>

	<ColourBlock colour="primary">
		<JoinUsCta
			button="Send us a message"
			subtitle="If you want to get involved with Scouting as volunteer or gain skills for life as a Squirrel, Beaver, Cub, Scout or Explorer why not 1st Chertsey Scout Group"
			title="Want to get involved with Scouting?"
			href="/#contact"
		/>
	</ColourBlock>

	<ColourBlock colour="alternative">
		<Address
			address="Scout HQ, 1st, Staines Ln, Chertsey KT16 8PS."
			title="Find Us"
			mapUrl="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2489.2856529569726!2d-0.509307878563761!3d51.39780582950432!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x48767792a09dbd7b%3A0x6fd3b0bba98c6c55!2s1st%20Chertsey%20Scout%20Group!5e0!3m2!1sen!2suk!4v1731404487795!5m2!1sen!2suk"
			mapTitle="Google Maps for 1st Chertsey Scout Group"
		/>
	</ColourBlock>

	<ContactForm
		emailLabel="Email"
		emailPlaceholder="bear.grylls@scouts.org.uk"
		messageLabel="Message"
		messagePlaceholder="Leave a comment..."
		nameLabel="Name"
		namePlaceholder="Bear Grylls"
		subjectLabel="Subject"
		subjectOptions={[{ label: "General Enquiry" }]}
		button="Send message"
		subtitle="Thanks for viewing our website. We hope that you've found the information that you were looking for. If you want to  us, register interest in joining or to volunteer, please use the form below and we'll be in touch."
		title="Get in Touch"
		privacyNotice="We'll never share your details"
	/>
</PageLayout>

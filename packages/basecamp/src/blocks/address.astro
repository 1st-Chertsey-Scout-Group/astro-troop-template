---
import BlockElement from "../components/block/block-element.astro";

interface Props {
  address: string;
  title: string;
  mapUrl: string;
  mapTitle: string;
}

const { address, title, mapUrl, mapTitle }: Props = Astro.props;
---

<BlockElement
  id="address"
  heading={{ title, subtitle: address, className: "text-primary" }}
  seperator={{ loading: "lazy" }}
>
  <div class="max-w-screen-md mx-auto">
    <iframe
      src={mapUrl}
      class="w-full h-96 rounded-lg border-0"
      allowfullscreen="true"
      loading="lazy"
      title={mapTitle}
      referrerpolicy="no-referrer-when-downgrade"
    >
    </iframe>
  </div>
</BlockElement>

---
import type { NavigationLink } from "../..//models/navigation-link";
import { cn } from "../../libs/cn";

interface Props extends NavigationLink {
  isMatch: boolean;
}

const { url, target, text, isMatch }: Props = Astro.props;
---

<li>
  <a
    class={cn("text-center hover:underline", {
      "text-primary font-extrabold": isMatch,
    })}
    href={url}
    target={target}
  >
    {text}
  </a>
</li>
